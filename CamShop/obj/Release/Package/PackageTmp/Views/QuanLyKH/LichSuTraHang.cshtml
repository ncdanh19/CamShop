
@{
    ViewBag.Title = "LichSuTraHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lichsuTraHang = (List<Models.EF.TraHang>)ViewBag.lichSuTraHang;
}

<div class="cart" style="margin-bottom:150px">
    <div class="container">
        @* div top *@
        <div class="cart-top">
            <a href="/">Trang chú</a>
            <a href="#">/</a>
            <a href="/tai-khoan/">Quản lý tài khoản</a>
        </div>
        <div class="col-md-9" style="padding-top:40px">
            <h2 id="form-tittle" style="margin-bottom:0px">Lịch sử trả hàng</h2>
            <div class="">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Mã hóa đơn
                            </th>
                            <th>
                                Lý do
                            </th>
                            <th>
                                Thời gian
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in lichsuTraHang)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.hoaDonID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.lyDo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ngayTra)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-3" style="padding-top:40px">
            @Html.Partial("DanhMucQLKH")
        </div>
    </div>
</div>

