<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

<style>
    .btn-loc {
        color: rgb(255, 255, 255);
        background-color: rgb(90, 136, 202);
        border-color: rgb(90, 136, 202);
    }

    .input-loc {
        padding: 0px 7px;
        border-radius: 3px;
        border-width: 1px;
        width: 60px;
        height: 30px;
    }
</style>

<section class="sky-form">
    <div class="product_right">
        <div style="text-align:center">
            <ul class="list-group">
                <li style=" background-color: aliceblue;" class="list-group-item list-group-item-light">
                    <h3>Lọc sản phẩm</h3>
                    <span style="font-size:16px;padding-bottom:15px; text-align:center">Chọn mức giá:</span>
                </li>
                <li class="list-group-item list-group-item-light">
                    @using (Html.BeginForm("LocSanPham", "SanPham", FormMethod.Get))
                    {
                        <input class="input-loc" placeholder="Min" type="number" min="0" name="minprice" /><label style="margin:13px">-</label> <input class="input-loc" placeholder="Max" type="number" name="maxprice" /> <button class="btn-loc" style="border-radius:3px;border-width:1px;width:31px;height:30px"><i class="fas fa-caret-right"></i></button>

                    }
                </li>
            </ul>
        </div>
    </div>
</section>
