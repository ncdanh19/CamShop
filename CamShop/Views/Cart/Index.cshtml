@model List<CamShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsCart{
    <script src="/Assets/client/js/cart.js"></script>
}
<div class="cart">
    <div class="container">
        @* div top *@
        <div class="cart-top">
            <a href="/">Trang chủ</a>
        </div>
        @* div trái 9, giỏ hàng *@
        <div class="col-md-9 cart-items">
            <h2>Giỏ hàng</h2>
            @foreach (var item in Model)
            {
                <div class="cart-header">
                    <div class="close1" data-id="@item.SanPham.sanPhamID"> </div>
                    <div class="cart-sec">
                        <div class="cart-item cyc">
                            <img src="@item.SanPham.hinhAnh" />
                        </div>
                        <div class="cart-item-info">
                            <h3>@item.SanPham.tenSanPham<span>@item.SanPham.thuongHieu</span></h3>
                            <h4><span>Giá : </span>@item.SanPham.donGia.GetValueOrDefault(0).ToString("N0")</h4>
                            <p class="qty">Số lượng:</p>
                            <input min="1" type="number" id="Quantity" name="quantity" data-id="@item.SanPham.sanPhamID" value="@item.SoLuong" class="form-control input-small">
                        </div>
                        <div class="clearfix"></div>
                        <div class="delivery">
                            <p>Thành tiền: @((item.SanPham.donGia.GetValueOrDefault(0) * item.SoLuong).ToString("N0"))</p>
                            <span>Delivered in 2-3 bussiness days</span>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            }
            <a href="#" class="btn-delete">Xóa hết</a>
        </div>
        @* div phải 3, thanh toán giỏ hàng *@
        <div class="col-md-3 cart-total">
            <a class="continue" href="#">Continue to basket</a>
            <div class="price-details">
                <h3>Price Details</h3>
                <span>Total</span>
                <span class="total">6200.00</span>
                <span>Discount</span>
                <span class="total">---</span>
                <span>Delivery Charges</span>
                <span class="total">150.00</span>
                <div class="clearfix"></div>
            </div>
            <h4 class="last-price">TOTAL</h4>
            <span class="total final">6350.00</span>
            <div class="clearfix"></div>
            <a class="order" href="#">Place Order</a>
            <div class="total-item">
                <h3>OPTIONS</h3>
                <h4>COUPONS</h4>
                <a class="cpns" href="#">Apply Coupons</a>
                <p><a href="#">Log In</a> to use accounts - linked coupons</p>
            </div>
        </div>
    </div>
</div>


