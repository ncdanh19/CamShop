
@{
    ViewBag.Title = "LichSuTraHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lichsuTraHang = (List<Models.EF.TraHang>)ViewBag.lichSuTraHang;
}

<div class="cart" style="margin-bottom:150px">
    <div class="container">
        @* div top *@
        <div class="cart-top">
            <a href="/">Trang chú</a>
            <a href="#">/</a>
            <a href="/tai-khoan/">Quản lý tài khoản</a>
        </div>
        <div class="col-md-9 cart-items" style="padding-left:50px">
            <h2 style="color:#fead53; text-align:center">Lịch sử mua hàng</h2>
            <hr />
            <div class="card mb-3">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        Mã hóa đơn
                                    </th>
                                    <th>
                                        Lý do
                                    </th>
                                    <th>
                                        Ngày trả
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lichsuTraHang)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.hoaDonID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.lyDo)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.ngayTra)
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3" style="padding-top:40px">
            @Html.Partial("DanhMucQLKH")
        </div>
    </div>
</div>

