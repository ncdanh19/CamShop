@model Models.EF.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cart" style="margin-bottom:150px">
    <div class="container">
        @* div top *@
        <div class="cart-top">
            <a href="/">Trang chú</a>
            <a href="#">/</a>
            <a href="/tai-khoan/">Quản lý tài khoản</a>
        </div>
        <div class="col-md-9 cart-items" style="padding-left:50px">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            <h2 style="color:#fead53; text-align:center">Thay đổi thông tin</h2>
                <div class="cart-header">
                    <div class="cart-sec">
                        <div class="cart-item cyc">
                            <img src="~/Assets/client/images/logo-user.jpg" />
                        </div>
                        <div class="cart-item-info" style="border-bottom:unset">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ID)
                            <div class="form-group hide">
                                <h4>
                                    <div>
                                        @Html.TextBoxFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                                    </div>
                                </h4>
                            </div>
                            <div class="form-group hide">
                                <h4>
                                    <div>
                                        @Html.TextBoxFor(model => model.passWord, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.passWord, "", new { @class = "text-danger" })
                                    </div>
                                </h4>
                            </div>
                            <div class="form-group">
                                <h4><span>Họ tên khách hàng:</span></h4>
                                <h4>
                                    <div>
                                        @Html.TextBoxFor(model => model.hoTen, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.hoTen, "", new { @class = "text-danger" })
                                    </div>
                                </h4>
                            </div>
                            <div class="form-group">
                                <h4><span>Địa chỉ:</span></h4>
                                <h4>
                                    <div>
                                        @Html.TextBoxFor(model => model.diaChi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.diaChi, "", new { @class = "text-danger" })
                                    </div>
                                </h4>
                            </div>
                            <div class="form-group">
                                <h4><span>Email:</span></h4>
                                <h4>
                                    <div>
                                        @Html.TextBoxFor(model => model.eMail, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.eMail, "", new { @class = "text-danger" })
                                    </div>
                                </h4>
                            </div>
                            <div class="form-group">
                                <h4><span>Số điện thoại:</span></h4>
                                <h4>
                                    <div>
                                        @Html.TextBoxFor(model => model.soDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.soDienThoai, "", new { @class = "text-danger" })
                                    </div>
                                </h4>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Sửa" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-3" style="padding-top:40px">
            @Html.Partial("DanhMucQLKH")
        </div>
    </div>
</div>



